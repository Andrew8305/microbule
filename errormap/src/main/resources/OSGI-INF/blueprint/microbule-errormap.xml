<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="errorMapperService" class="org.microbule.errormap.impl.ErrorMapperServiceImpl">
        <argument ref="blueprintBundleContext" />
    </bean>

    <bean id="decorator" class="org.microbule.errormap.ErrorMapperDecorator">
        <argument ref="errorMapperService" />
    </bean>

    <service ref="decorator" interface="org.microbule.spi.JaxrsServerDecorator">
        <service-properties>
            <entry key="name" value="errormap" />
        </service-properties>
    </service>

    <bean id="illegalArgumentExceptionMapper" class="org.microbule.spi.error.ConstantErrorMapper">
        <argument value="java.lang.IllegalArgumentException" />
        <argument value="BAD_REQUEST" />
    </bean>

    <service ref="illegalArgumentExceptionMapper" interface="org.microbule.spi.error.ErrorMapper" />

    <bean id="verifyExceptionMapper" class="org.microbule.spi.error.ConstantErrorMapper">
        <argument value="com.google.common.base.VerifyException" />
        <argument value="BAD_REQUEST" />
    </bean>

    <service ref="verifyExceptionMapper" interface="org.microbule.spi.error.ErrorMapper" />

    <bean id="webApplicationExceptionErrorMapper" class="org.microbule.errormap.WebApplicationExceptionErrorMapper" />

    <service ref="webApplicationExceptionErrorMapper" interface="org.microbule.spi.error.ErrorMapper" />

</blueprint>