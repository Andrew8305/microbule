<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <cm:property-placeholder persistent-id="org.microbule.config.osgi" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="overrideProviderNames" value="sysprop,env"/>
            <cm:property name="providerNames" value="osgi"/>
            <cm:property name="configPid" value="org.microbule.config.osgi.provider"/>
            <cm:property name="waitDuration" value="5" />
            <cm:property name="waitUnit" value="SECONDS" />
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="configService" class="org.microbule.config.osgi.OsgiConfigService">
        <argument ref="blueprintBundleContext"/>
        <argument value="${overrideProviderNames}"/>
        <argument value="${providerNames}"/>
        <argument value="${waitDuration}" />
        <argument value="${waitUnit}" />
    </bean>

    <service ref="configService" interface="org.microbule.config.api.ConfigService"/>

    <bean id="configProvider" class="org.microbule.config.osgi.OsgiConfigProvider"/>

    <service ref="configProvider" interface="org.microbule.config.spi.ConfigProvider">
        <service-properties>
            <entry key="name" value="osgi"/>
        </service-properties>
    </service>

    <service ref="configProvider" interface="org.osgi.service.cm.ManagedService">
        <service-properties>
            <entry key="service.pid" value="${configPid}"/>
        </service-properties>
    </service>

</blueprint>