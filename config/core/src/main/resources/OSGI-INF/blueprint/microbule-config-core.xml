<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:microbule="http://www.microbule.org/blueprint"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <cm:property-placeholder persistent-id="org.microbule.config.core" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="configPid" value="org.microbule.config.osgi.provider"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <microbule:beanFinder id="beanFinder" />

    <bean id="configService" class="org.microbule.config.core.DefaultConfigBuilderFactory">
        <argument ref="beanFinder"/>
    </bean>

    <service ref="configService" interface="org.microbule.config.api.ConfigBuilderFactory" />

</blueprint>