<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <cm:property-placeholder persistent-id="org.microbule.osgi.config" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="configPid" value="org.microbule.osgi.config.provider"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="configProvider" class="org.microbule.osgi.config.OsgiConfigProvider"/>

    <service ref="configProvider" interface="org.microbule.config.spi.ConfigProvider"/>

    <service ref="configProvider" interface="org.osgi.service.cm.ManagedService">
        <service-properties>
            <entry key="service.pid" value="${configPid}"/>
        </service-properties>
    </service>

</blueprint>