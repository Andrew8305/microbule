<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <cm:property-placeholder persistent-id="org.microbule.osgi" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="quietPeriod" value="5000"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <reference id="configService" interface="org.microbule.config.api.ConfigService" />

    <!--
    JAX-RS Server Factory
    -->
    <bean id="serverFactory" class="org.microbule.core.DefaultJaxrsServerFactory" />

    <bean id="serverDecoratorRegistrar" class="org.microbule.osgi.JaxrsServerDecoratorRegistrar">
        <argument ref="blueprintBundleContext"/>
        <argument ref="serverFactory" />
    </bean>

    <bean id="serverManager" class="org.microbule.osgi.JaxrsServerManager" destroy-method="destroy">
        <argument ref="blueprintBundleContext"/>
        <argument ref="configService" />
        <argument ref="serverFactory" />
        <argument value="${quietPeriod}" />
    </bean>

    <service ref="serverFactory" interface="org.microbule.api.JaxrsServerFactory" />

    <!--
    JAX-RS Proxy Factory
    -->
    <bean id="proxyFactory" class="org.microbule.core.DefaultJaxrsProxyFactory" />

    <bean id="proxyDecoratorRegistrar" class="org.microbule.osgi.JaxrsProxyDecoratorRegistrar">
        <argument ref="blueprintBundleContext" />
        <argument ref="proxyFactory" />
    </bean>

    <service ref="proxyFactory" interface="org.microbule.api.JaxrsProxyFactory" />

</blueprint>