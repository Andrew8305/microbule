<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="configService" interface="org.microbule.api.JaxrsConfigService"/>
    <reference id="serverFactory" interface="org.microbule.api.JaxrsServerFactory"/>

    <bean id="serverDiscovery" class="org.microbule.osgi.core.OsgiJaxrsServerDiscovery">
        <argument ref="blueprintBundleContext"/>
        <argument ref="configService"/>
        <argument ref="serverFactory"/>
    </bean>

</blueprint>