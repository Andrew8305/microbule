<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="resource" class="org.microbule.example.blueprint.HelloBlueprint" />

    <service ref="resource" interface="org.microbule.example.common.HelloResource">
        <service-properties>
            <entry key="microbule.server" value="true"/>
            <entry key="microbule.serverAddress" value="/microbule-example-blueprint" />
        </service-properties>
    </service>

</blueprint>