<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="resource" class="org.microbule.example.blueprint.HelloBlueprint" />

    <service ref="resource" interface="org.microbule.example.common.HelloResource">
        <service-properties>
            <entry key="microbule.server" value="true"/>
        </service-properties>
    </service>


    <reference id="proxyFactory" interface="org.microbule.api.JaxrsProxyFactory" />

    <bean id="proxy" factory-ref="proxyFactory" factory-method="createProxy">
        <argument value="org.microbule.example.common.HelloResource" />
    </bean>

    <bean id="delegator" class="org.microbule.example.blueprint.HelloDelegatorImpl">
        <argument ref="proxy" />
    </bean>

    <service ref="delegator" interface="org.microbule.example.blueprint.HelloDelegator">
        <service-properties>
            <entry key="microbule.server" value="true"/>
        </service-properties>
    </service>

</blueprint>