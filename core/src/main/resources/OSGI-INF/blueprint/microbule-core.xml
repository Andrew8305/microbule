<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="serverFactory" class="org.microbule.core.JaxrsServerFactory" init-method="init" destroy-method="destroy">
        <argument ref="blueprintBundleContext" />
    </bean>

    <bean id="proxyFactory" class="org.microbule.core.JaxrsProxyFactoryImpl">
        <argument ref="blueprintBundleContext" />
    </bean>

    <service ref="proxyFactory" interface="org.microbule.api.JaxrsProxyFactory" />

</blueprint>