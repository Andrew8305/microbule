<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:microbule="http://www.microbule.org/blueprint">

    <microbule:container id="container"/>

    <bean id="metricsService" class="org.microbule.metrics.core.DefaultMetricsService">
        <argument ref="container"/>
    </bean>

    <service ref="metricsService" interface="org.microbule.metrics.api.MetricsService"/>


    <bean id="decayStrategy" class="org.microbule.metrics.core.strategy.ExponentiallyDecayingTimingStrategy"/>

    <service ref="decayStrategy" interface="org.microbule.metrics.spi.TimingStrategy"/>

    <bean id="timeWindowStrategy" class="org.microbule.metrics.core.strategy.SlidingTimeWindowTimingStrategy"/>

    <service ref="timeWindowStrategy" interface="org.microbule.metrics.spi.TimingStrategy"/>

    <bean id="windowStrategy" class="org.microbule.metrics.core.strategy.SlidingWindowTimingStrategy"/>

    <service ref="windowStrategy" interface="org.microbule.metrics.spi.TimingStrategy"/>

    <bean id="uniformStrategy" class="org.microbule.metrics.core.strategy.UniformTimingStrategy"/>

    <service ref="uniformStrategy" interface="org.microbule.metrics.spi.TimingStrategy"/>
</blueprint>