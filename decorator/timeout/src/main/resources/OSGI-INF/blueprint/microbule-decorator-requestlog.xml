<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <cm:property-placeholder persistent-id="org.microbule.decorator.timeout" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="receiveTimeout" value="60000"/>
            <cm:property name="connectionTimeout" value="30000"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="decorator" class="org.microbule.decorator.timeout.TimeoutProxyDecorator">
        <argument value="${connectionTimeout}" />
        <argument value="${receiveTimeout}" />
    </bean>

    <service ref="decorator" interface="org.microbule.spi.JaxrsProxyDecorator">
        <service-properties>
            <entry key="name" value="timeout" />
        </service-properties>
    </service>

</blueprint>